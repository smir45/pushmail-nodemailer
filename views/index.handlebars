    <style>
      * {
        margin: 0%;

        font-family: "inter";
      }
      body {
        margin-top: 40px;
        display: flex;
        justify-content: center;
        background-color: #e3e1e1;
      }
      main {
        background: white;
      }
      .welcome {
        background-color: white;
        border-radius: 7px;
        width: 600px;
        padding: 10px 60px;
      }
      .pirate-logo {
        margin-right: 5px;
        padding: 20px;
        display: flex;
        gap: 8px;
        justify-content: center;
        align-items: center;
        font-size: 18px;
        line-height: 24px;
        font-weight: bold;
      }
      .hero-img {
        border-radius: 4px;
        background-color: #d5e8ff;
        position: relative;
        height: 287px;
      }
      .hero-img img {
        position: absolute;
        left: 82px;
        bottom: 30px;
      }
      .welcome-text {
