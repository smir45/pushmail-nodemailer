        background-color: #edf4f5;
      }
      .welcome-par {
        margin: 20px 0px 0px 0px;
        font-weight: 500;
        font-size: 18px;
        line-height: 36px;
        text-align: center;
        color: #2e3b44;
      }
      .welcome-text button {
        margin-top: 20px;
        font-style: normal;
        font-weight: 500;
        font-size: 16px;
        line-height: 26px;
        color: #ffffff;
        align-items: flex-start;
        padding: 16px 32px;
        background: #206edb;
        border-radius: 5px;
        border: 0px;
      }
      .footer {
        margin-top: 15px;
        padding: 10px;
        background: #edf4f5;
        border-radius: 4px;
      }

      .footer-logs {
        padding: 10px 0px;
        display: flex;
        justify-content: space-between;
      }
      .footer-logs .pirate-logo {
        padding: 10px 0px;
      }
      .footer-contacts a {
        font-weight: normal;
        font-size: 12px;
        line-height: 26px;
        text-decoration: none !important;
        color: #56666d;
      }
      .social-icons {
        display: grid;
        justify-content: center;
        gap: 15px;
        grid-template-columns: 20px 20px 20px;
      }
      .footer-info {
        display: flex;
        justify-content: space-between;
        font-weight: normal;
        font-size: 10px;
        line-height: 16px;
        color: #999999;
      }
      table {
        width: 600px;
        border-spacing: 0px;
        padding: 10px 60px;
      }
